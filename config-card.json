{
    "entranceUrl": "file:src/test/resources/fixtures/cards.html",
    "rateLimit": {
        "requestsPerMinute": 12,
        "randomize": true
    },    
    "cache": {
        "enabled": true,
        "ttlMinutes": 120,
        "cacheDir": "target/cache"
    },
    "mainCard": {
        "itemSelector": "div.product-card",
        "fields": [
            {
                "key": "id",
                "selector": "span.id",
                "optional": false
            },
            {
                "key": "name",
                "selector": "h3.title a"
            },
            {
                "key": "nameUrl", // ← convention: ends with "Url" → extract href
                "selector": "h3.title a"
            },
            {
                "key": "price",
                "selector": "div.price"
            },
            {
                "key": "category",
                "selector": "span.category",
                "optional": true
            }
        ]
    },
    "detailPage": {
        "fields": [
            {
                "key": "description",
                "selector": "p.description"
            }
        ]
    },
    "pagination": {
        "nextButtonSelector": "a.next"
    }
}